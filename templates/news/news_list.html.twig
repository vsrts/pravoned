{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <h1 class="page-head">Новости</h1>
        <div class="news-list">
            {% for item in news %}
                <div class="news-list-item">
                    <div class="image-list-news">
                        {% if item.image is null %}
                            <img src="{{ asset('images/news/not-photo.jpg') | imagine_filter('news_thumb') }}" />
                        {% else %}
                            <img src="{{ asset('/images/news/' ~ item.image) | imagine_filter('news_thumb') }}" />
                        {% endif %}
                    </div>
                    <div class="news-list-name">
                        {{ item.name }}
                    </div>
                    <div class="news-list-preview">
                        {{ item.previewText }}
                    </div>
                    <div class="news-list-foot">
                        <div class="news-list-created">
                            {{ item.createdAt|date("d-m-Y") }}
                        </div>
                        {% if item.text %}
                            <a class="news-more" href="{{ asset('/news/'~item.id) }}">Подробнее</a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}